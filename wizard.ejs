<%- include header.ejs %>


<!-- Page container -->
<div class="page-container">

    <!-- Page content -->
    <div class="page-content">

        <!-- Main content -->
        <div class="content-wrapper">


            <!-- Wizard with validation -->

            <!-- /wizard with validation -->

            <div class="panel panel-white">
                <div class="panel-heading">
                    <h6 class="panel-title">Kurulum Sihirbaz</h6>
                    <div class="heading-elements">
                        <ul class="icons-list">
                            <li><a data-action="collapse"></a></li>
                            <li><a data-action="reload"></a></li>
                            <li><a data-action="close"></a></li>
                        </ul>
                    </div>
                </div>

                <form class="stepy-validation" action="/wizard" method="post">

                    <fieldset title="1">
                        <legend class="text-semibold">Kişisel Bilgiler</legend>


                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Başvuru sahibi: <span class="text-danger">*</span></label>
                                <input type="text" name="name" value="<%= fiName %>" class="form-control required" placeholder="Ad">
                            </div>
                            <div class="form-group">
                                <label>Başvuru sahibi: <span class="text-danger">*</span></label>
                                <input type="text" name="lastn" value="<%= laName %>" class="form-control required" placeholder="Soyad">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Yetki Seçiniz: <span class="text-danger">*</span></label>
                                <select name="position" data-placeholder="Rütbe" class="select required">
                                    <option></option>
                                    <optgroup label="Rütbe">
                                        <option value="1">Müdür</option>
                                        <option value="2">Satış Sorumlusu</option>
                                        <option value="3">Garson</option>
                                        <option value="4">Kasiyer</option>
                                    </optgroup>





                                </select>
                            </div>
                            <div class="form-group">
                                <label>E-Posta: <span class="text-danger">*</span></label>
                                <input type="email" value="<%= uMail %>" name="email" class="form-control required" placeholder="info@nippy.com">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>TC No:</label>
                                <input type="text" name="tcNO" class="form-control" data-mask="99999999999">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Telefon #:</label>
                                <input type="text" value="<%= uPhone %>" name="tel" class="form-control" placeholder="+90(212)-547-34-61" data-mask="+99(999)-999-99-99">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Doğum Tarihi:</label>
                                    <div class="form-group">
                                        <select name="bmonth" data-placeholder="Ay" class="select">
                                            <option></option>
                                            <option value="01">Ocak</option>
                                            <option value="02">Şubat</option>
                                            <option value="03">Mart</option>
                                            <option value="04">Nisan</option>
                                            <option value="05">Mayıs</option>
                                            <option value="06">Haziran</option>
                                            <option value="07">Temmuz</option>
                                            <option value="08">Ağustos</option>
                                            <option value="09">Eylül</option>
                                            <option value="10">Ekim</option>
                                            <option value="11">Kasım</option>
                                            <option value="12">Aralık</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <label>&nbsp;</label>
                                    <div class="form-group">
                                        <select name="bday" data-placeholder="Gün" class="select">
                                            <option></option>
                                            <%for(var i=1;i<=31;i++){%>
                                            <option value="<%=i%>"><%=i%></option>
                                            <%}%>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <label>&nbsp;</label>
                                    <div class="form-group">
                                        <select name="byear" data-placeholder="Yıl" class="select">
                                            <option></option>
                                            <%for(var i=1940;i<=2000;i++){%>
                                            <option value="<%=i%>"><%=i%></option>
                                            <%}%>

                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">

                            <div class="form-group">
                                <label>Logo:</label>
                                <input name="recommendations" type="file" class="file-styled">
                                <span class="help-block">Format: png, ico. Maks. 2Mb</span>
                            </div>
                        </div>


                    </fieldset>


                    <fieldset title="2">
                        <legend class="text-semibold">Restorant Bilgileri</legend>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Şirket: <span class="text-danger">*</span></label>
                                    <input type="text" name="sirket_adi" placeholder="Şirket Adı" class="form-control required">
                                </div>

                                <div class="form-group">
                                    <label>Bölge: <span class="text-danger">*</span></label>
                                    <select name="bolge_adi" data-placeholder="Lütfen bölgenizi seçiniz..." class="select-simple">
                                        <option></option>
                                        <option value="marmara">Marmara</option>
                                        <option value="ege">Ege</option>
                                        <option value="karadeniz">Karadeniz</option>
                                        <option value="ic-anadolu">İç Anadolu</option>
                                        <option value="dogu-anadolu">Doğu Anadolu</option>
                                        <option value="guney-anadolu">Güney Doğu Anadolu</option>
                                        <option value="akdeniz">Akdeniz</option>

                                    </select>
                                </div>


                            </div>

                            <div class="col-md-6">


                                <div class="form-group">
                                    <label>İl: <span class="text-danger">*</span></label>
                                    <select name="sube_ili" data-placeholder="Lütfen ilinizi seçiniz..." class="select-simple">
                                        <option></option>
                                        <option value="il">İller</option>


                                    </select>
                                </div>

                                <div class="form-group">
                                    <label>İlçe: <span class="text-danger">*</span></label>
                                    <select name="sube_ilcesi" data-placeholder="Lütfen ilçenizi seçiniz..." class="select-simple">
                                        <option></option>
                                        <option value="ilce">İlçeler</option>


                                    </select>
                                </div>

                            </div>

                            <div class="col-md-6">

                                <div class="form-group">
                                    <label>Şube Adı: <span class="text-danger">*</span></label>
                                    <input type="text" name="sube_adi" placeholder="Şube Adı" class="form-control required">
                                </div>

                                <div class="form-group">
                                    <label>Şube Telefonu: <span class="text-danger">*</span></label>
                                    <input type="text" name="rest_telefon" placeholder="Şube Telefonu" class="form-control required">
                                </div>

                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Mail: <span class="text-danger">*</span></label>
                                    <input type="text" name="rest_mail" placeholder="Şube Mail" class="form-control required">
                                </div>

                                <div class="form-group">
                                    <label>Masa Sayısı: <span class="text-danger">*</span></label>
                                    <input type="text" name="rest_masa_sayisi" placeholder="20" class="form-control required">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Adres Bilgileri:</label>
                                    <textarea name="rest_adres" rows="4" cols="4" placeholder="Açık adres bilginizi giriniz" class="form-control"></textarea>
                                </div>


                            </div>
                            <div class="col-md-6">

                                <div class="form-group">
                                    <label>Logo:</label>
                                    <input name="recommendations" type="file" class="file-styled">
                                    <span class="help-block">Format: png, ico. Maks. 2Mb</span>
                                </div>
                            </div>


                        </div>


                    </fieldset>

                    <fieldset title="3">
                        <legend class="text-semibold">Bilgileri Kaydet</legend>

                        <div class="row">
                            <div class="col-md-6">

                            </div>

                            <div class="col-md-6">

                            </div>
                        </div>
                    </fieldset>

                    <button type="submit" class="btn btn-primary stepy-finish">Submit <i class="icon-check position-right"></i></button>
                </form>
            </div>



        </div>
        <!-- /main content -->

    </div>
    <!-- /page content -->



</div>

<%- include footer.ejs %>
